// Leibniz formula for Pi: Ï€/4 = 1 - 1/3 + 1/5 - 1/7 + ...
// Pi = 4 * sum
fn main() {
    let sum: float = 0.0;
    let sign: float = 1.0;
    let denom: float = 1.0;
    let iterations: float = 100000.0;
    let i: float = 0.0;
    
    while i < iterations {
        sum = sum + sign / denom;
        sign = sign * -1.0;
        denom = denom + 2.0;
        i = i + 1.0;
    }
    
    let pi: float = sum * 4.0;
    print(pi);
    return 0;
}
